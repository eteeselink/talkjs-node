{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": false,
        "outDir": "dist",
        "target": "ESNext",
        "declaration": true,
        "stripInternal": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
